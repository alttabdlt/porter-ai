# Porter.AI Environment Configuration
# Copy this file to .env and customize for your setup

# ============================================
# PLATFORM CONFIGURATION
# ============================================

# Vision-Language Model Selection
# Options: omnivlm, fastvlm, simple
USE_OMNIVLM=true              # Use OmniVLM (cross-platform, recommended)
USE_FASTVLM=false             # Use FastVLM (Apple Silicon only)
USE_SIMPLE_PROCESSOR=false    # Use simple processor (no ML, for testing)

# Capture Configuration
USE_NATIVE_CAPTURE=false      # Use native capture (macOS only) vs cross-platform
CAPTURE_FPS=10                # Frames per second for capture
CAPTURE_WIDTH=1920            # Capture resolution width
CAPTURE_HEIGHT=1080           # Capture resolution height
CAPTURE_MONITOR_INDEX=0       # Monitor index (0=primary, 1=secondary, etc.)

# ============================================
# MODEL CONFIGURATION
# ============================================

# OmniVLM Settings
OMNIVLM_MODEL_NAME=NexaAI/OmniVLM-968M  # Model name/path
OMNIVLM_DEVICE=auto           # Device: auto, cpu, cuda, mps
OMNIVLM_USE_FP16=true         # Use half precision (faster, less memory)
OMNIVLM_MAX_TOKENS=150        # Maximum tokens to generate
OMNIVLM_TEMPERATURE=0.5       # Generation temperature (0.0-1.0)
OMNIVLM_CACHE_DIR=~/.cache/huggingface  # Model cache directory

# Performance Settings
PROCESSING_MODE=balanced      # Options: fast, balanced, quality
BATCH_SIZE=1                  # Batch size for inference
USE_QUANTIZATION=false        # Use 4-bit quantization (lower memory)

# ============================================
# SERVER CONFIGURATION
# ============================================

# Web Dashboard
SERVER_HOST=0.0.0.0          # Server host (0.0.0.0 for all interfaces)
SERVER_PORT=8000             # Server port
ENABLE_CORS=true             # Enable CORS for web access
DASHBOARD_AUTO_OPEN=true     # Auto-open dashboard in browser

# WebSocket Settings
WS_MAX_CONNECTIONS=10        # Maximum WebSocket connections
WS_PING_INTERVAL=30          # WebSocket ping interval (seconds)

# ============================================
# MEMORY & PERFORMANCE
# ============================================

# Memory Management
MAX_MEMORY_GB=4              # Maximum memory usage in GB
ENABLE_MEMORY_CLEANUP=true   # Periodic memory cleanup
CLEANUP_INTERVAL=300         # Cleanup interval in seconds

# Threading
NUM_WORKERS=2                # Number of worker threads
USE_ASYNC_PROCESSING=true    # Use async processing

# ============================================
# LOGGING & DEBUG
# ============================================

# Logging Configuration
LOG_LEVEL=INFO               # Options: DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=false            # Log to file instead of console
LOG_FILE_PATH=./logs/porter.log  # Log file path
LOG_ROTATION=daily           # Log rotation: daily, weekly, size

# Debug Settings
DEBUG_MODE=false             # Enable debug mode
PROFILE_PERFORMANCE=false    # Enable performance profiling
SAVE_DEBUG_FRAMES=false      # Save captured frames for debugging
DEBUG_FRAMES_PATH=./debug_frames  # Path to save debug frames

# ============================================
# SECURITY & PRIVACY
# ============================================

# Privacy Settings
BLUR_SENSITIVE_REGIONS=false  # Blur potentially sensitive screen regions
EXCLUDE_PASSWORDS=true        # Exclude password fields from capture
LOCAL_ONLY=true              # Restrict to local connections only

# ============================================
# PLATFORM-SPECIFIC
# ============================================

# Windows-specific
WINDOWS_USE_DIRECTML=false   # Use DirectML acceleration
WINDOWS_CAPTURE_CURSOR=true  # Include cursor in capture

# macOS-specific
MACOS_USE_SCREENCAPTUREKIT=true  # Use native ScreenCaptureKit
MACOS_REQUEST_PERMISSIONS=true   # Auto-request screen recording permission

# Linux-specific
LINUX_USE_XVFB=false         # Use virtual display (headless)
LINUX_DISPLAY=:0             # X11 display to use

# ============================================
# EXPERIMENTAL FEATURES
# ============================================

ENABLE_OMNIPARSER=false      # Enable OmniParser for UI parsing
ENABLE_VOICE_COMMANDS=false  # Enable voice command support
ENABLE_AUTO_ACTIONS=false    # Enable automatic action suggestions